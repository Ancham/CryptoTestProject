<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/coinName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/coin_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dynamicCoinName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/coinName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="example Name" />

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dynamicCoinName"
        android:text="@string/coin_symbol"
        app:layout_constraintStart_toEndOf="@id/dynamicCoinName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dynamicCoinSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/coinSymbol"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="example Symbol" />

    <TextView
        android:id="@+id/coinId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/coin_id"
        app:layout_constraintStart_toEndOf="@id/dynamicCoinSymbol"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dynamicCoinId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/coinId"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="example Id" />
</androidx.constraintlayout.widget.ConstraintLayout>