<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crypttestproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptTestProject"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.cryptoApplication.CryptoApplication"
            android:exported="false" />
        <activity
            android:name=".activities.baseActivity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".addCurrencyForm.AddNewCryptoCurrency"
            android:exported="false" />
        <activity
            android:name=".activities.addCryptoCurrencyActivity.AddCryptoCurrencyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.mainActivity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CryptTestProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>